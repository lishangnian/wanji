<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- 填充的颜色：这里设置背景透明 -->
            <solid android:color="@color/pureColorBackgroundWhite" />
            <!-- 边框的颜色 ：不能和窗口背景色一样-->
            <stroke android:width="1px" android:color="@color/checkColorBlue" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="28px" />
        </shape>
    </item>
</selector>