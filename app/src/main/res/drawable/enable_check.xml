<?xml version="1.0" encoding="UTF-8"?><!--档位数字显示选中时的背景-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <corners android:radius="5px" />
    <!-- 边框的颜色 ：不能和窗口背景色一样-->
    <solid android:color="@color/checkColorBlue" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <stroke
        android:width="1px"
        android:color="@color/checkColorBlue" />
</shape>


