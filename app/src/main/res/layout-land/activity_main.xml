<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/collect_roads_background">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top_title_panel"
        android:layout_toEndOf="@+id/left_menu_panel"
        android:layout_toRightOf="@+id/left_menu_panel"></com.amap.api.maps.MapView>


    <!--上面的标题logo层-->
    <LinearLayout
        android:id="@+id/top_title_panel"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/titleColorBackgroundWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--android:layout_width="195px"-->
        <!--android:layout_height="40px"-->
        <ImageView
            android:layout_width="140px"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:src="@drawable/company_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36px"
            android:gravity="center_vertical"
            android:text="无人驾驶扫地机"
            android:includeFontPadding="false"
            android:textColor="@color/titleColorDarkBlue"
            android:textSize="32px" />

        <include
            layout="@layout/head_show_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px" />

    </LinearLayout>

    <!--左侧菜单层-->
    <RelativeLayout
        android:id="@+id/left_menu_panel"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:background="@drawable/index_left_menu"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/connect_img_btn"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:background="#fcf9f2"
            android:scaleType="fitEnd"
            android:src="@drawable/not_connect" />

        <LinearLayout
            android:id="@+id/collect_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_end_radio_group"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/collect_map_img_btn"
                android:layout_width="45px"
                android:layout_height="43px"
                android:layout_centerHorizontal="true"
                android:background="#fcf9f2"
                android:scaleType="fitEnd"
                android:src="@drawable/collect_map_no_check" />

            <TextView
                android:id="@+id/collect_map_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collect_map_img_btn"
                android:layout_marginTop="5px"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="地图采集"
                android:textColor="@color/noCheckColorGray"
                android:textSize="18px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reload_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collect_tab"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/reload_img_btn"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_centerHorizontal="true"
                android:background="#fcf9f2"
                android:scaleType="fitEnd"
                android:src="@drawable/reload_no_check" />

            <TextView
                android:id="@+id/reload_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reload_img_btn"
                android:layout_marginTop="5px"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="刷新"
                android:textColor="@color/noCheckColorGray"
                android:textSize="18px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_road_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reload_tab"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/delete_road_img_btn"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_centerHorizontal="true"
                android:background="#fcf9f2"
                android:scaleType="fitEnd"
                android:src="@drawable/delete_map_no_check" />

            <TextView
                android:id="@+id/delete_road_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delete_road_img_btn"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                android:text="删除轨迹"
                android:textColor="@color/noCheckColorGray"
                android:textSize="18px" />
        </LinearLayout>
        <!--地图采集-->

        <Button
            android:id="@+id/go_pause_btn"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_below="@+id/connect_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:textSize="22px"
            android:background="@drawable/button_activ_switch"
            android:gravity="center"
            android:shadowColor="@color/noCheckColorGray"
            android:text="暂停"
            android:textColor="@color/noCheckColorGray"></Button>

        <LinearLayout
            android:id="@+id/start_end_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/go_pause_btn"
            android:orientation="vertical"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/go_radio_btn"
                android:layout_width="110px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:background="@drawable/stop_go_btn_default"
                android:button="@null"
                android:text="出发"
                android:textAlignment="center"
                android:textColor="@color/noCheckColorGray"
                android:textSize="22px" />

            <Button
                android:id="@+id/end_radio_btn"
                android:layout_width="110px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_marginTop="10px"
                android:background="@drawable/stop_go_btn_default"
                android:button="@null"
                android:text="结束"
                android:textAlignment="center"
                android:textColor="@color/noCheckColorGray"
                android:textSize="22px" />

        </LinearLayout>
        <!--刷新-->
        <TextView
            android:id="@+id/connect_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connect_img_btn"
            android:layout_marginTop="5px"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/connect_off_line"
            android:textColor="#627288"
            android:textSize="18px" />
    </RelativeLayout>


    <!--右侧菜单层-->
    <!--#060610      #33A1C9-->
    <RelativeLayout
        android:id="@+id/right_menu_panel"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110px"
        android:background="@drawable/index_right_menu"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_clean_btn"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_below="@+id/work_mode_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/button_activ_switch"
            android:gravity="center"
            android:shadowColor="@color/noCheckColorGray"
            android:text="扫地"
            android:textColor="@color/colorDeepBlack" />

        <Button
            android:id="@+id/go_garbagestation_btn"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_below="@+id/go_clean_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/button_activ_switch"
            android:gravity="center"
            android:shadowColor="@color/noCheckColorGray"
            android:text="回站"
            android:textColor="@color/colorDeepBlack" />

        <Button
            android:id="@+id/go_garage_btn"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_below="@+id/go_garbagestation_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:background="@drawable/button_activ_switch"
            android:gravity="center"
            android:shadowColor="@color/noCheckColorGray"
            android:text="回库"
            android:textColor="@color/colorDeepBlack"></Button>


        <Button
            android:id="@+id/presentation_btn"
            android:layout_width="110px"
            android:layout_height="50px"
            android:layout_below="@+id/go_garage_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px"
            android:layout_marginTop="20px"
            android:background="@drawable/button_activ_switch"
            android:gravity="center"
            android:shadowColor="@color/noCheckColorGray"
            android:text="演示"
            android:textColor="@color/colorDeepBlack"></Button>

        <TextView
            android:id="@+id/work_mode_txt"
            android:layout_width="80px"
            android:layout_height="32px"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10px"
            android:layout_marginTop="30px"
            android:background="@drawable/sys_enable_pressed"
            android:text="等待中.."
            android:textAlignment="center"
            android:textColor="@color/titleColorBackgroundWhite"
            android:textSize="18px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110px"
        android:layout_toLeftOf="@+id/right_menu_panel"
        android:layout_marginRight="10px"
        android:orientation="vertical"
        >
<!--        android:background="@color/colorDark"-->

        <Spinner
            android:layout_width="150px"
            android:layout_height="65px"
            android:layout_marginTop="10px"
            android:id="@+id/area_spinner"
            />
        <Spinner
            android:layout_width="150px"
            android:layout_height="65px"
            android:layout_marginTop="10px"
            android:id="@+id/road_spinner"
            />

    </LinearLayout>

</RelativeLayout>
